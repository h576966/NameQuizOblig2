<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="TODO" />
    <Button
        android:id="@+id/buttonPhoto"
        android:text="@string/buttonPhoto"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:onClick="pickPhoto"/>

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint2"
        android:textAlignment="center"
        android:visibility="invisible"
        android:inputType="TODO" />

    <Button
        android:id="@+id/addActivityButton"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:text="@string/addActivity"
        android:onClick="addKitten"
        android:visibility="invisible"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:text="@string/backToDb"
        android:textAlignment="center"
        android:onClick="onClickDatabase2" />

</LinearLayout>